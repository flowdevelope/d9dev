{% if label_hidden %}
    {% if multiple %}
        <div class="slideritems">
            {% for item in items %}
                <div{{ item.attributes.addClass(field_name|clean_class) }}>{{ item.content }}<span class="description">{{ item.content['#item'].title }}</span></div>
            {% endfor %}
        </div>
        <div class="slidernav">
            {% for item in items %}
                <div{{ item.attributes.addClass(field_name|clean_class) }}>{{ item.content }}<span class="description">{{ item.content['#item'].title }}</span></div>
            {% endfor %}
        </div>
    {% else %}
        {% for item in items %}
            <div{{ attributes.addClass(field_name|clean_class) }}><div class="inner">{{ item.content }}</div></div>
        {% endfor %}
    {% endif %}
{% else %}
    <div{{ attributes }}>
        <div{{ title_attributes }}>{{ label }}</div>
        {% if multiple %}
        <div>
            {% endif %}
            {% for item in items %}
                <div{{ item.attributes.addClass(field_name|clean_class) }}><div class="inner">{{ item.content }}</div></div>
            {% endfor %}
            {% if multiple %}
        </div>
        {% endif %}
    </div>
{% endif %}