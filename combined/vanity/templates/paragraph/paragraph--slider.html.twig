{%
  set classes = [
  'paragraph',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  'color-custom-brown',
]
%}

{% block paragraph %}
  <section{{ attributes.addClass(classes) }}>
    <div class="container">
      <div class="row">
        {% block content %}
          {% if paragraph.field_paragraph_title.isEmpty() == false %}
            <h2 id="{{ title_attributes.id|clean_class }}" class="{{ title_attributes.class }}">{{ content.field_paragraph_title|render|striptags|trim }}</h2>
          {% endif %}
          {{ content|without('field_paragraph_title') }}
        {% endblock %}
      </div>
    </div>

  </section>
{% endblock paragraph %}
